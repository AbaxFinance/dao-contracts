{
  "name": "dao-contracts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cs": "npx tsx ./scripts/compile/compileSingleContract.ts",
    "ts": "tsc --noEmit --incremental --preserveWatchOutput --pretty",
    "build:debug": "npx @c-forge/typechain-compiler --config typechain.config.json",
    "build:release": "npx @c-forge/typechain-compiler --config typechain.config.json -r",
    "deploy": "npx tsx runWithoutWarnings.ts env DEBUG=1 npx tsx scripts/deploy.ts $*",
    "deployTest": "npx tsx runWithoutWarnings.ts env DEBUG=1 npx tsx scripts/deployTest.ts",
    "localnode": "./substrate-contracts-node --dev --tmp -lerror,runtime::contracts=debug --rpc-max-connections 5000 --pruning=archive",
    "test:debug": "npx tsx runWithoutWarnings.ts env DEBUG=1 npx tsx scripts/runScenarioWithDebug.ts",
    "test": "./runTests.sh",
    "generateTypes": "rm -rf typechain && npx @c-forge/typechain-polkadot --in artifacts --out typechain",
    "clippy": " cd src && script -efq ./clippy.log -c 'env CARGO_TERM_COLOR=always cargo clippy -- -W clippy::pedantic'",
    "lint": "pnpm lint:format && pnpm lint:fix",
    "lint:fix": "eslint . --ext .js,.ts --fix --ignore-path ./.gitignore",
    "lint:format": "pretty-quick  --loglevel warn --write \"./**/*.{js,ts,md,json}\" ",
    "prepare": "husky install"
  },
  "dependencies": {
    "@abaxfinance/utils": "^0.0.103",
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/register": "^7.23.7",
    "@c-forge/pendzl-tests": "^0.0.20",
    "@c-forge/polkahat-chai-matchers": "^0.0.78",
    "@c-forge/polkahat-network-helpers": "^0.0.78",
    "@c-forge/typechain-compiler": "^0.2.4",
    "@c-forge/typechain-polkadot": "0.2.4",
    "@c-forge/typechain-types": "0.2.4",
    "@polkadot/api": "^10.12.4",
    "@polkadot/api-contract": "^10.12.4",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/types": "^10.12.4",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@types/chroma-js": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "ansi-to-html": "^0.7.2",
    "bn.js": "^5.2.1",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "chai-formatter-monkeypatch": "^1.0.1",
    "chalk": "^4.1.2",
    "color-name-list": "^10.19.0",
    "commander": "^10.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "fs-extra": "^11.2.0",
    "glob": "^8.1.0",
    "lint-staged": "^13.3.0",
    "lodash": "^4.17.21",
    "loglevel": "^1.9.1",
    "mocha": "^10.3.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.3.1",
    "rxjs": "^7.8.1",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.13",
    "@types/chai-as-promised": "^7.1.8",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "husky": "^9.0.11",
    "tsconfig-paths": "^4.2.0"
  }
}
